\mode<presentation>

%% Define colors based on the official UT Austin primary & secondary palettes
%% (available at https://brand.utexas.edu/identity/color/)
\definecolor{BurntOrange}{RGB}{191, 87, 0}
\definecolor{DarkGrey}{RGB}{51, 63, 72}
\definecolor{White}{RGB}{255, 255, 255}
\definecolor{LightOrange}{RGB}{248, 151, 31}
\definecolor{Gold}{RGB}{255, 214, 0}
\definecolor{LightGreen}{RGB}{166, 205, 87}
\definecolor{DarkGreen}{RGB}{87, 157, 66}
\definecolor{Teal}{RGB}{0, 169, 183}
\definecolor{Blue}{RGB}{0, 95, 134}
\definecolor{MidGrey}{RGB}{156, 173, 183}
\definecolor{LightGrey}{RGB}{214, 210, 196}

\setbeamercolor*{palette primary}    {bg = BurntOrange, fg = White}
\setbeamercolor*{palette secondary}  {bg = BurntOrange, fg = White}
\setbeamercolor*{palette tertiary}   {bg = BurntOrange, fg = White}
\setbeamercolor*{palette quaternary} {bg = BurntOrange, fg = White}

\setbeamercolor*{palette sidebar primary}    {bg = BurntOrange, fg = White}
\setbeamercolor*{palette sidebar secondary}  {bg = BurntOrange, fg = White}
\setbeamercolor*{palette sidebar tertiary}   {bg = BurntOrange, fg = White}
\setbeamercolor*{palette sidebar quaternary} {bg = BurntOrange, fg = White}

\setbeamercolor*{sidebar}{fg = BurntOrange, bg = White}

\setbeamercolor*{structure}{fg = Blue}

\setbeamercolor*{block title} {bg = Blue,               fg = White}
